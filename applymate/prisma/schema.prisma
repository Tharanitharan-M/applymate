generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//
// User Model
// Uses Cognito sub as the primary key
// Synced from Cognito on first authenticated request
//

model User {
  id            String   @id // Cognito sub (unique user identifier)
  email         String   @unique
  name          String?
  emailVerified Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  resumes  Resume[]
  jobs     JobApplication[]
  contacts Contact[]
}

//
// Resume Model
// Stores the main resume a user uploads
//

model Resume {
  id                 String   @id @default(cuid())
  userId             String
  fileUrl            String
  parsedText         String?
  name               String? // Optional resume name
  atsScore           Int? // ATS score out of 100
  atsGrade           String? // Grade based on ATS score (A, B, C, D, F)
  improvementActions String[] // Array of actionable improvement suggestions
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user       User            @relation(fields: [userId], references: [id])
  jobResumes JobResumeUsed[]
}

//
// JobApplication Model
// Tracks each job and stores the job description
//

model JobApplication {
  id                     String   @id @default(cuid())
  userId                 String
  company                String
  role                   String
  location               String?
  jobUrl                 String?
  jobDescription         String?
  notes                  String?
  status                 String   @default("saved")
  uploadedResumeUrl      String? // S3 key for uploaded resume PDF
  uploadedCoverLetterUrl String? // S3 key for uploaded cover letter PDF
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  user        User              @relation(fields: [userId], references: [id])
  aiResult    ResumeSuggestion?
  chats       ChatMessage[]
  usedResumes JobResumeUsed[]
}

//
// Resume Suggestions from AI
// Stores all Gemini analysis for a specific job
//

model ResumeSuggestion {
  id                 String   @id @default(cuid())
  jobId              String   @unique
  matchScore         Int?
  missingSkills      String[] // Stores missingItems (combined missing skills/keywords)
  suggestedBullets   String[]
  improvedSummary    String?
  atsKeywords        String[] // Stores skillsMatched
  relevantExperience String[] // Stores relevant experience points
  improvements       Json? // Stores detailed improvements array
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  job JobApplication @relation(fields: [jobId], references: [id])
}

//
// JobResumeUsed
// Stores which resume was used for which job
// Lets the user use different resumes per application
//

model JobResumeUsed {
  id        String   @id @default(cuid())
  jobId     String
  resumeId  String
  createdAt DateTime @default(now())

  job    JobApplication @relation(fields: [jobId], references: [id])
  resume Resume         @relation(fields: [resumeId], references: [id])

  @@unique([jobId, resumeId])
}

//
// ChatMessage Model
// Stores chat messages per job for the in job AI chat window
//

model ChatMessage {
  id        String   @id @default(cuid())
  jobId     String
  role      String // "user" or "assistant"
  message   String
  createdAt DateTime @default(now())

  job JobApplication @relation(fields: [jobId], references: [id])
}

//
// Contact Model
// Stores networking contacts for job search
//

model Contact {
  id              String    @id @default(cuid())
  userId          String
  name            String
  company         String?
  role            String?
  linkedInUrl     String?
  email           String?
  notes           String?
  status          String    @default("not_contacted")
  lastContactedAt DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user         User                 @relation(fields: [userId], references: [id])
  interactions ContactInteraction[]
  reminders    ContactReminder[]
  chatMessages ContactChatMessage[]
}

//
// ContactInteraction Model
// Tracks timeline of interactions with a contact
//

model ContactInteraction {
  id        String   @id @default(cuid())
  contactId String
  type      String // "messaged", "replied", "scheduled_call", "met", "connected", etc.
  notes     String?
  createdAt DateTime @default(now())

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([contactId])
}

//
// ContactReminder Model
// Stores reminders for follow-ups with contacts
//

model ContactReminder {
  id          String   @id @default(cuid())
  contactId   String
  title       String
  description String?
  dueDate     DateTime
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([contactId])
  @@index([dueDate])
}

//
// ContactChatMessage Model
// Stores AI chat messages for contact outreach help
//

model ContactChatMessage {
  id        String   @id @default(cuid())
  contactId String
  role      String // "user" or "assistant"
  message   String
  createdAt DateTime @default(now())

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([contactId])
}
