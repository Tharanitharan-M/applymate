generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//
// User Model
// Uses Cognito sub as the primary key
// Synced from Cognito on first authenticated request
//

model User {
  id            String   @id // Cognito sub (unique user identifier)
  email         String   @unique
  name          String?
  emailVerified Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  resumes Resume[]
  jobs    JobApplication[]
}

//
// Resume Model
// Stores the main resume a user uploads
//

model Resume {
  id                String   @id @default(cuid())
  userId            String
  fileUrl           String
  parsedText        String?
  name              String?  // Optional resume name
  atsScore          Int?     // ATS score out of 100
  atsGrade          String?  // Grade based on ATS score (A, B, C, D, F)
  improvementActions String[] // Array of actionable improvement suggestions
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user       User            @relation(fields: [userId], references: [id])
  jobResumes JobResumeUsed[]
}

//
// JobApplication Model
// Tracks each job and stores the job description
//

model JobApplication {
  id             String   @id @default(cuid())
  userId         String
  company        String
  role           String
  jobUrl         String?
  jobDescription String?
  status         String   @default("saved")
  createdAt      DateTime @default(now())

  user        User              @relation(fields: [userId], references: [id])
  aiResult    ResumeSuggestion?
  chats       ChatMessage[]
  usedResumes JobResumeUsed[]
}

//
// Resume Suggestions from AI
// Stores all Gemini analysis for a specific job
//

model ResumeSuggestion {
  id               String   @id @default(cuid())
  jobId            String   @unique
  matchScore       Int?
  missingSkills    String[]
  suggestedBullets String[]
  improvedSummary  String?
  atsKeywords      String[]
  createdAt        DateTime @default(now())

  job JobApplication @relation(fields: [jobId], references: [id])
}

//
// JobResumeUsed
// Stores which resume was used for which job
// Lets the user use different resumes per application
//

model JobResumeUsed {
  id        String   @id @default(cuid())
  jobId     String
  resumeId  String
  createdAt DateTime @default(now())

  job    JobApplication @relation(fields: [jobId], references: [id])
  resume Resume         @relation(fields: [resumeId], references: [id])

  @@unique([jobId, resumeId])
}

//
// ChatMessage Model
// Stores chat messages per job for the in job AI chat window
//

model ChatMessage {
  id        String   @id @default(cuid())
  jobId     String
  role      String // "user" or "assistant"
  message   String
  createdAt DateTime @default(now())

  job JobApplication @relation(fields: [jobId], references: [id])
}
